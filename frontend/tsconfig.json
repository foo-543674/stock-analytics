{
  // For VSCode
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom"
    ],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "allowJs": false,
    "noImplicitReturns": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@tests/*": [
        "tests/*"
      ],
    },
  },
  "include": [
    "*.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
}