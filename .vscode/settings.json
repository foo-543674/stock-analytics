{
  "editor": {
    "indentSize": "tabSize",
    "tabSize": 2,
    "detectIndentation": false,
    "formatOnSave": true
  },
  "files.eol": "\n",
  "python": {
    "pythonPath": "/usr/local/python/current/bin/python",
    "testing": {
      "pytestEnabled": true,
      "unittestEnabled": false,
      "pytestArgs": [
        "scripts"
      ]
    },
    "linting": {
      "enabled": true,
      "pylintEnabled": false,
      "pep8Enabled": false,
      "flake8Enabled": true,
      "flake8Args": [
        "--ignore=E111, E114, E402, E501"
      ]
    },
    "formatting": {
      "provider": "autopep8",
      "autopep8Args": [
        "--indent-size=2",
        "--ignore=E111, E114, E402, E501"
      ]
    }
  },
  "[python]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false
  },
  "[rust]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false
  },
  "rust-analyzer": {
    "testExplorer": true,
    "rustfmt": {
      "extraArgs": [
        "--tab-spaces=2"
      ]
    }
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
}